cd app-root/repo
gem install sass --no-ri --no-rdoc
mkdir _dist
mkdir _dist/static

cd app-root/repo
make server NODE_ENV=production &

while [ ! -f go.txt ]
do
  echo "Waiting for go.txt to be created."
  sleep 10
done

oldProcess=`ps ax | fgrep node | awk '{print $1}' | sed -n 1p`
kill -15 $oldProcess
sleep 1
kill -2 $oldProcess
sleep 1
kill -9 $oldProcess
sleep 1

cd _dist/static
curl -X POST -s --data-urlencode 'input@style.css' http://cssminifier.com/raw > style.min.css
rm style.css
mv style.min.css style.css
